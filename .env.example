# Database Configuration
DB_HOST=postgres
DB_USER=your_db_user
DB_PASS=your_secure_password
DB_NAME=jwt_api
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long

# SMTP Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=your_smtp_user
